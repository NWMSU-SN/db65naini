extends layout 
 
block content 
  .container 
    h1= title 
    h2= message 
    br 
    form(role='form', action="/login", method="post", style='max-width: 300px;') 
      .form-group 
          input.form-control.m-2(type='text', name="username", placeholder='Enter Username') 
      .form-group 
        input.form-control.m-2(type='password', name="password", placeholder='Password') 
      div(class="d-flex justify-content-evenly m-4")
       button.btn.btn-primary(type='submit') Submit 
       a(href='/' class="btn btn-secondary") Cancel